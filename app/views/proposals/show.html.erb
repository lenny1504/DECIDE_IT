
<h1>Your proposal </h1>

<%= @proposal.title %>
<%= @proposal.description %>
<%=@proposal.status %>
<%=@proposal.budget %>
<%=@proposal.due_date %>

 <%= link_to  "Edit Proposal", edit_proposal_path(@proposal) %>

<% if @proposal.approval_flow.nil? %>
    <%= link_to  "Create Approval Flow", new_proposal_approval_flow_path(@proposal) %>
<% else %>
  <p>Approval Flow: <%= link_to @proposal.approval_flow.name, proposal_approval_flow_path(@proposal.approval_flow) %></p>
<% end %>

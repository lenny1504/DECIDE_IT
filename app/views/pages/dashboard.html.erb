<div class="dashboard-container">

  <div class="all-proposals-header mb-4">
    <h1>Welcome to your Dashboard,<br><strong><%= @user.first_name %> <%= @user.last_name %></strong></h1>
      <%= link_to "Create new proposal ", new_proposal_path, class: "btn btn-flat-white"  %>
  </div>
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <button class="nav-link" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">My Tasks</button>
      <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">My Proposals</button>
  </nav>
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <div class="approval-requests-container">
      <%# <h2 id="dash-header"></h2> %>
    <div class="proposal-cards-container">
      <%= render "shared/table-tasks" %>
    </div>
  </div>
  </div>
  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
  <div class="my-proposals-container">
    <%# <h2 id="dash-header"></h2> %>
    <div class="proposal-cards-container">
      <%= render "shared/table-proposal" %>
    </div>
  </div>
  </div>
  </div>
</div>
